<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyAppPortfolio"
    android:background="#ffb9e777">

    <TextView android:text="My Nanodegree Apps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:textColor="#ff7d5300"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIY STREAMER"
        android:id="@+id/spotifyAppBtn"
        android:background="#ff740007"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:layout_alignLeft="@+id/titleTextView"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:textColor="#ffffffff"
        android:onClick="sendMessage"
        android:tag="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOTBALL SCORE APP"
        android:id="@+id/footballAppBtn"
        android:background="#ff740007"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spotifyAppBtn"
        android:layout_alignRight="@+id/spotifyAppBtn"
        android:layout_alignEnd="@+id/spotifyAppBtn"
        android:layout_alignLeft="@+id/spotifyAppBtn"
        android:layout_alignStart="@+id/spotifyAppBtn"
        android:textColor="#ffffffff"
        android:onClick="sendMessage"
        android:tag="2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryAppBtn"
        android:background="#ff740007"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/footballAppBtn"
        android:layout_alignRight="@+id/footballAppBtn"
        android:layout_alignEnd="@+id/footballAppBtn"
        android:layout_alignLeft="@+id/footballAppBtn"
        android:layout_alignStart="@+id/footballAppBtn"
        android:textColor="#ffffffff"
        android:onClick="sendMessage"
        android:tag="3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBiggerAppBtn"
        android:background="#ff740007"
        android:layout_below="@+id/libraryAppBtn"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/libraryAppBtn"
        android:layout_alignEnd="@+id/libraryAppBtn"
        android:layout_alignLeft="@+id/libraryAppBtn"
        android:layout_alignStart="@+id/libraryAppBtn"
        android:textColor="#ffffffff"
        android:onClick="sendMessage"
        android:tag="4"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzAppBtn"
        android:background="#ff740007"
        android:layout_below="@+id/buildItBiggerAppBtn"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/buildItBiggerAppBtn"
        android:layout_alignEnd="@+id/buildItBiggerAppBtn"
        android:layout_alignLeft="@+id/buildItBiggerAppBtn"
        android:layout_alignStart="@+id/buildItBiggerAppBtn"
        android:textColor="#ffffffff"
        android:onClick="sendMessage"
        android:tag="5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/myAppBtn"
        android:background="#ff413a74"
        android:layout_below="@+id/xyzAppBtn"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/xyzAppBtn"
        android:layout_alignEnd="@+id/xyzAppBtn"
        android:layout_alignLeft="@+id/xyzAppBtn"
        android:layout_alignStart="@+id/xyzAppBtn"
        android:onClick="sendMessage"
        android:tag="6"
        android:textColor="#ffffffff" />

</RelativeLayout>
